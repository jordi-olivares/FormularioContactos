<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfDatos"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/cNombre"
        android:fontFamily="casual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Datos"
        android:layout_margin="@dimen/mMargenFormulario"
        android:gravity="center"
        android:textSize="@dimen/btmTextSize"
        android:drawablePadding="@dimen/paddingIcon"
        />
    <TextView
        android:id="@+id/cFecha"
        android:fontFamily="casual"
        android:drawableLeft="@drawable/ic_date"
        android:layout_margin="@dimen/mMargenFormulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de naciomiento"
        android:drawablePadding="@dimen/paddingIcon"
        />

    <TextView
        android:id="@+id/cTelefono"
        android:fontFamily="casual"
        android:drawableLeft="@drawable/ic_phone"
        android:layout_margin="@dimen/mMargenFormulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÃ©lefono"
        android:drawablePadding="@dimen/paddingIcon"
        />

    <TextView
        android:id="@+id/cEmail"
        android:drawableLeft="@drawable/ic_email"
        android:fontFamily="casual"
        android:layout_margin="@dimen/mMargenFormulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/paddingIcon"
        />

    <TextView
        android:id="@+id/cDescripcion"
        android:fontFamily="casual"
        android:layout_margin="@dimen/mMargenFormulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/btmConfirmar"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cbtmText"
        android:textSize="@dimen/btmTextSize"
        android:textAllCaps="false"
        android:layout_gravity="center"

        />
</LinearLayout>